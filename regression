# REGRESI LINIER SEDERHANA

# Baca data
data <- read.csv("data/mtcars.csv")

# Model regresi
model <- lm(mpg ~ hp, data = data)

# Ringkasan model
summary(model)

# Visualisasi regresi
png("results/regression_plot.png")
plot(data$hp, data$mpg,
     main = "Regresi Linier MPG terhadap Horsepower",
     xlab = "Horsepower",
     ylab = "MPG",
     pch = 19)
abline(model, col = "red", lwd = 2)
dev.off()
